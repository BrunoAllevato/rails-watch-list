<div class="container mt-4 text-center">

  <h1 class="fw-bold opacity-75">Create Your New Movie List!</h1>

  <div class="mt-4 d-flex justify-content-center">

    <%= simple_form_for(@list) do |f| %>
      <div class="align-items-center"><%= f.input :name %></div>
      <%= f.submit "Create List", class: "btn btn-primary mb-3" %>
    <% end %>

  </div>

    <div class="mt-3">
      <%= link_to lists_path, class: "text-decoration-none" do %>
        <i class="fa-solid fa-left-long"></i>
          Back to Homepage
      <% end %>
    </div>

</div>
