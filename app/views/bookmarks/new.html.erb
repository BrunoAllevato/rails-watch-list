<div class="container mt-3">

  <h1 class="fw-bold opacity-75">Bookmarks - Add movies to "<%= @list.name %>"</h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment, placeholder: 'Enter a comment about the movie' %>
    <%= f.association :movie %>
    <%= f.submit "Add Movie", class:"btn btn-primary mb-3" %>
  <% end %>

  <div class="col-2 mt-4">
    <%= link_to list_path(@list), class: "text-decoration-none" do %>
      <i class="fa-solid fa-left-long"></i>
      Go Back to List
    <% end %>
    <br>
    <%= link_to lists_path, class: "text-decoration-none" do %>
      <i class="fa-solid fa-left-long"></i>
      Back to Homepage
    <% end %>
  </div>
</div>
