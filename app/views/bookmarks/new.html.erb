<div class="container mt-3">

  <h1>Bookmarks - Add movie to <%= @list.name %></h1>

  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment, placeholder: 'Enter a comment about the movie' %>
    <%= f.association :movie %>
    <%= f.submit "Add Movie", class:"btn btn-primary mb-3" %>
  <% end %>

  <div class="col-2">
    <%= link_to "Back to List", list_path(@list), class: "text-decoration-none" %>
    <br>
    <%= link_to "Homepage", lists_path, class: "text-decoration-none" %>
  </div>
</div>
